Algoritmo "ex_013"

Var
   salario, aumento : real

Inicio
   //Entrada de dados
   escreva("Digite o salário do funcionário: R$")
   leia(salario)

   aumento <- salario + ( 0.15 * 100) //Fórmula para calcular o aumento de salário

   //Saída de dados
   escreva("O novo salário com aumento de 15% fica: R$", aumento)

Fimalgoritmo